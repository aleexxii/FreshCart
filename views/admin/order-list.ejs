<script>

    let minDate, maxDate;

    $(document).ready(function () {
        // Custom filtering function which will search data in column four between two values
        $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
            let min = minDate.val() ? moment(minDate.val(), 'MMMM Do YYYY') : null;
            let max = maxDate.val() ? moment(maxDate.val(), 'MMMM Do YYYY') : null;
            let date = moment(data[1], 'MMMM Do YYYY'); // Assuming date is in the second column, adjust if necessary

            if (
                (min === null && max === null) ||
                (min === null && date <= max) ||
                (min <= date && max === null) ||
                (min <= date && date <= max)
            ) {
                return true;
            }
            return false;
        });

        // Initialize date inputs
        minDate = $("#min");
        maxDate = $("#max");

        // Initialize DataTable
        let table = $("#tableOrders").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });

        // Refilter the table on date input change
        $("#min, #max").on("change", function () {
            table.draw();
        });

        // Week button click event
        $("#week").on("click", function () {
            var startOfWeek = moment().startOf("week");
            var endOfWeek = moment().endOf("week");

            minDate.val(startOfWeek.format("MMMM Do YYYY"));
            maxDate.val(endOfWeek.format("MMMM Do YYYY"));

            table.draw();
        });

        // Month button click event
        $("#month").on("click", function () {
            var startOfMonth = moment().startOf("month");
            var endOfMonth = moment().endOf("month");

            minDate.val(startOfMonth.format("MMMM Do YYYY"));
            maxDate.val(endOfMonth.format("MMMM Do YYYY"));

            table.draw();
        });

        // Year button click event
        $("#year").on("click", function () {
            var startOfYear = moment().startOf("year");
            var endOfYear = moment().endOf("year");

            minDate.val(startOfYear.format("MMMM Do YYYY"));
            maxDate.val(endOfYear.format("MMMM Do YYYY"));

            table.draw();
        });
    });

</script>


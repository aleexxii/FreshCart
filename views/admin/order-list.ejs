               </div>
               <!-- row -->
               <div class="row">
                  <div class="col-xl-12 col-12 mb-5">
					
                     <!-- card -->
                     <div class="card h-100 card-lg">
                      
						<table border="0" cellspacing="5" cellpadding="5">
							<tbody>
							  <tr>
								<td>Start date:</td>
								<td><input placeholder="Start Date" type="text" id="min" name="min" /></td>
							  </tr>
							  <tr>
								<td>End date:</td>
								<td><input placeholder="End Date" type="text" id="max" name="max" /></td>
							  </tr>
							  <tr class="d-flex justify-content-between">
								<!-- <td><button id="day">Day</button></td> -->
								<td><button id="week" class="btn btn-secondary">Week</button></td>
								<td><button id="month" class="btn btn-secondary">Month</button></td>
								<td><button id="year" class="btn btn-secondary">Year</button></td>
							  </tr>
							</tbody>
				  		</table>
                        <!-- card body -->
                        <div class="card-body p-0">
                           <div class="table-responsive">
							
							<table class="table mb-0 text-nowrap table-centered" id="tableOrders">
								<!-- Table Head -->
								<thead class="bg-light">
								  <tr>
									<th>Order</th>
									<th>Date</th>
									<th>Status</th>
									<th>Total</th>
									<th>Actions</th>
								  </tr>
								</thead>
								<tbody>
								  <!-- Table body -->
								  <% if (orders && orders.length > 0) { %>
									<% orders.forEach(order => { %>
									  <tr>
										<td>
										  <% let imageCount = 0; %>
										  <% let allItemsCancelled = true; %>
										  <% order.products.forEach((product, index) => { %>
											<% if (product.status !== 'Cancelled') { %>
											  <% allItemsCancelled = false; %>
											<% } %>
											<% if (imageCount % 2 === 0 && imageCount !== 0) { %>
											  <br>
											<% } %>
											<img src="../../user/assets/images/productImages/<%= product.product.image[0] %>" alt="Product Image" style="max-width: 50px; display: inline-block; margin-right: 10px;">
											<% imageCount++; %>
										  <% }) %>
										</td>
										<% const months = [
										  "January", "February", "March", "April", "May", "June",
										  "July", "August", "September", "October", "November", "December"
										]; %>
										<td><%= months[order.orderDate.getMonth()] %> <%= order.orderDate.getDate() %> <%= order.orderDate.getFullYear() %></td>
										<td>
										  <% if (allItemsCancelled) { %>
											Cancelled
										  <% } else { %>
											<%= order.orderStatus %>
										  <% } %>
										</td>
										<td><%= order.transaction_Amt %> for <%= order.products.length %> item(s)</td>
										<td>
										  <a href="./single-order/<%- order._id %>" class="btn-small d-block bi-eye"></a>
										</td>
									  </tr>
									<% }); %>
								  <% } else { %>
									<tr>
									  <td colspan="5">No orders found</td>
									</tr>
								  <% } %>
								</tbody>
							  </table>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
